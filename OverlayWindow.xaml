<Window x:Class="framebase_app.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Framebase Overlay" Height="250" Width="350"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">

    <Window.Resources>
        <DropShadowEffect x:Key="TextShadow" Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="1"/>
    </Window.Resources>

    <!-- Root Border for Edit Mode Background -->
    <Border x:Name="RootBorder" Background="Transparent" CornerRadius="5" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Border.LayoutTransform>
            <ScaleTransform x:Name="OverlayScale" ScaleX="1.0" ScaleY="1.0"/>
        </Border.LayoutTransform>
        
        <StackPanel>
            <!-- Main FPS Row -->
            <StackPanel x:Name="FpsSection" Orientation="Horizontal" Margin="0,0,0,4">
                <TextBlock Text="FPS" Foreground="#AAAAAA" FontSize="12" VerticalAlignment="Bottom" Margin="0,0,4,2" Effect="{StaticResource TextShadow}"/>
                <TextBlock x:Name="FpsValue" Text="144" Foreground="#00FF00" FontSize="28" FontWeight="Bold" Effect="{StaticResource TextShadow}" Margin="0,0,12,0"/>
                
                <TextBlock Text="AVG" Foreground="#AAAAAA" FontSize="10" VerticalAlignment="Bottom" Margin="0,0,4,4" Effect="{StaticResource TextShadow}"/>
                <TextBlock x:Name="AvgValue" Text="138" Foreground="White" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Bottom" Margin="0,0,8,2" Effect="{StaticResource TextShadow}"/>

                <TextBlock Text="1% LOW" Foreground="#AAAAAA" FontSize="10" VerticalAlignment="Bottom" Margin="0,0,4,4" Effect="{StaticResource TextShadow}"/>
                <TextBlock x:Name="LowValue" Text="120" Foreground="White" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Bottom" Margin="0,0,0,2" Effect="{StaticResource TextShadow}"/>
            </StackPanel>

            <!-- Frametime Graph Section -->
            <StackPanel x:Name="GraphSection">
                <Grid>
                    <Border Height="50" Width="280" BorderBrush="#44FFFFFF" BorderThickness="0,0,0,1" Margin="0,0,0,4" HorizontalAlignment="Left">
                        <Canvas x:Name="FrametimeCanvas" ClipToBounds="True"/>
                    </Border>
                    <TextBlock x:Name="FrametimeValue" Text="6.9 ms" Foreground="#AAAAAA" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Effect="{StaticResource TextShadow}"/>
                </Grid>
            </StackPanel>

            <!-- Hardware Stats Row (Compact) -->
            <StackPanel x:Name="HardwareSection" Orientation="Horizontal" Margin="0,4,0,0">
                <!-- CPU -->
                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="CPU" Foreground="#00F0FF" FontWeight="Bold" FontSize="10" Effect="{StaticResource TextShadow}"/>
                    <TextBlock x:Name="CpuLoad" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Effect="{StaticResource TextShadow}"/>
                </StackPanel>

                <!-- GPU -->
                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="GPU" Foreground="#00F0FF" FontWeight="Bold" FontSize="10" Effect="{StaticResource TextShadow}"/>
                    <TextBlock x:Name="GpuLoad" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Effect="{StaticResource TextShadow}"/>
                </StackPanel>

                <!-- RAM -->
                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="RAM" Foreground="#00F0FF" FontWeight="Bold" FontSize="10" Effect="{StaticResource TextShadow}"/>
                    <TextBlock x:Name="RamLoad" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Effect="{StaticResource TextShadow}"/>
                </StackPanel>

                <!-- VRAM -->
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="VRAM" Foreground="#00F0FF" FontWeight="Bold" FontSize="10" Effect="{StaticResource TextShadow}"/>
                    <TextBlock x:Name="VramLoad" Text="-" Foreground="White" FontSize="13" FontWeight="SemiBold" Effect="{StaticResource TextShadow}"/>
                </StackPanel>
            </StackPanel>

            <!-- Bottleneck Warning -->
            <Border x:Name="BottleneckWarning" Background="#CC000000" CornerRadius="3" Padding="6,3" Margin="0,8,0,0" Visibility="Collapsed">
                <TextBlock x:Name="BottleneckText" Text="" Foreground="#FFD700" FontSize="11" FontWeight="Bold" Effect="{StaticResource TextShadow}"/>
            </Border>

            <!-- Status -->
            <TextBlock x:Name="StatusText" Text="Inactive" Foreground="#888888" FontSize="10" Margin="0,8,0,0" Effect="{StaticResource TextShadow}"/>
        </StackPanel>
    </Border>
</Window>
