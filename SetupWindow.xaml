<Window x:Class="framebase_app.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Framebase â€“ Initial Setup" Height="650" Width="900" Background="{StaticResource Brush.SurfaceDark}" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="framebase_logo.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border CornerRadius="10" Padding="16" Background="{StaticResource Brush.Surface}">
            <StackPanel>
                <TextBlock Text="Welcome to Framebase" FontSize="22" FontWeight="Bold" Foreground="{StaticResource Brush.Text}"/>
                <TextBlock Text="Quick setup: Pair device and get started." Margin="0,6,0,0" Foreground="{StaticResource Brush.TextMuted}"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="0,16,0,0">
            <!-- Pairing Section -->
            <Border x:Name="PairingCard" Style="{StaticResource Card}">
                <StackPanel x:Name="PairingPanel">
                    <TextBlock Text="Pair Device" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text}"/>
                    <TextBlock Text="Enter the pairing code from the web app to link this device with your account." Margin="0,6,0,6" Foreground="{StaticResource Brush.TextMuted}"/>
                    <DockPanel x:Name="PairingInputPanel" LastChildFill="False">
                        <StackPanel Width="260">
                            <TextBlock Text="Pairing Code" Foreground="{StaticResource Brush.TextMuted}" Margin="0,0,0,4"/>
                            <TextBox x:Name="PairingCodeBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                        <Button x:Name="PairBtn" Style="{StaticResource PrimaryButton}" Margin="10,18,0,0">Pair</Button>
                        
                        <!-- Autostart Toggle - rechtsbÃ¼ndig -->
                        <StackPanel DockPanel.Dock="Right" 
                                   HorizontalAlignment="Right" 
                                   Orientation="Horizontal" 
                                   Margin="0,18,0,0" 
                                   VerticalAlignment="Top">
                            <TextBlock Text="Start with Windows" 
                                      Foreground="{StaticResource Brush.Text}" 
                                      FontSize="12" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,8,0"/>
                            <!-- Custom Toggle Switch -->
                            <Border x:Name="AutostartToggle" 
                                   Width="36" 
                                   Height="18" 
                                   CornerRadius="9" 
                                   Background="{StaticResource Brush.Accent}" 
                                   MouseLeftButtonUp="AutostartToggle_Click"
                                   Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Ellipse x:Name="AutostartToggleKnob" 
                                        Width="14" 
                                        Height="14" 
                                        Fill="White" 
                                        HorizontalAlignment="Right" 
                                        Margin="2">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="AutostartToggleTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </StackPanel>
                    </DockPanel>
                    <TextBlock x:Name="PairingStatus" Margin="0,8,0,0" Foreground="{StaticResource Brush.TextMuted}"/>
                    
                    <!-- Success Panel (initially hidden) -->
                    <StackPanel x:Name="PairingSuccessPanel" Visibility="Collapsed" Margin="0,8,0,0">
                        <TextBlock Text="âœ… Successfully paired!" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text}" Margin="0,0,0,4"/>
                        <TextBlock x:Name="ConnectedEmailText" Foreground="{StaticResource Brush.TextMuted}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Detected Games Section -->
            <Border x:Name="DetectedGamesCard" Style="{StaticResource Card}" Margin="0,10,0,0">
                <StackPanel>
                    <DockPanel Margin="0,0,0,12">
                        <TextBlock Text="Games with Configuration Files" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text}"/>
                        <Button x:Name="RefreshGamesButton" Content="ðŸ”„" Style="{StaticResource SecondaryButton}" 
                                Width="32" Height="32" FontSize="14" HorizontalAlignment="Right" 
                                ToolTip="Rescan games"/>
                    </DockPanel>
                    <TextBlock x:Name="GamesStatusText" Foreground="{StaticResource Brush.TextMuted}" Margin="0,0,0,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="160">
                        <StackPanel x:Name="DetectedGamesPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Preset Selection (initially hidden) -->
            <Border x:Name="PresetSelectionCard" Style="{StaticResource Card}" Margin="0,10,0,0" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Choose Presets" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text}" Margin="0,0,0,12"/>
                    <ScrollViewer x:Name="PresetScroll" VerticalScrollBarVisibility="Auto" CanContentScroll="False" MaxHeight="460" 
                                  Focusable="True">
                        <StackPanel x:Name="PresetSelectionPanel"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ContinueButton" Content="Continue" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" IsEnabled="False"/>
                <Button x:Name="FinishSetupButton" Style="{StaticResource PrimaryButton}" Visibility="Collapsed">Finish</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>